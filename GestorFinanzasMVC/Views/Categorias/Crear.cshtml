@model MetaFinanciera

@{
    ViewData["Title"] = "Agregar Meta Financiera";
}

<div class="container mt-4">
    <h2>Agregar Meta Financiera</h2>

    <form asp-action="Crear" method="post" class="mt-3">
        <div class="mb-3">
            <label for="CategoriaId" class="form-label">Categoría</label>
            <select asp-for="CategoriaId" class="form-select" asp-items="@(new SelectList(ViewBag.Categorias, "CategoriaId", "Nombre"))">
                <option value="">-- Selecciona una categoría --</option>
            </select>
            <span asp-validation-for="CategoriaId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="MontoObjetivo" class="form-label">Monto Objetivo</label>
            <input asp-for="MontoObjetivo" class="form-control" />
            <span asp-validation-for="MontoObjetivo" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="Tipo" class="form-label">Tipo</label>
            <select asp-for="Tipo" class="form-select">
                <option value="">-- Selecciona un tipo --</option>
                <option value="Ingreso">Ingreso</option>
                <option value="Gasto">Gasto</option>
            </select>
            <span asp-validation-for="Tipo" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">Guardar Meta</button>
        <a asp-action="Listar" class="btn btn-secondary ms-2">Cancelar</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
